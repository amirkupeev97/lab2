<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

 <TextView
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:background="#FCE4EC"
     android:textSize="40dp"
     android:text=""
     android:gravity="center"
     android:textColor="#ffff"
     android:id="@+id/math_operation"></TextView>
 <TextView
     android:layout_width="match_parent"
     android:layout_height="100dp"
     android:background="#FCE4EC"
     android:textSize="40dp"
     android:text=""
     android:gravity="center"
     android:textColor="#ffff"
     android:id="@+id/result"></TextView>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:weightSum="5">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
     android:orientation="horizontal"
     android:weightSum="4">
  <Button
      android:layout_width="0dp"
      android:text="Back"
      android:background="#F44336"
      android:textSize="25dp"
      android:textColor="#ffff"
      android:id="@+id/btn_back"
      android:layout_height="match_parent"
      android:layout_weight="1"></Button>
  <Button
      android:layout_width="0dp"
      android:text="AC"
      android:background="#F8BBD0"
      android:textSize="40dp"
      android:textColor="#ffff"
      android:id="@+id/btn_clear"
      android:layout_height="match_parent"
      android:layout_weight="1"></Button>
  <Button
      android:layout_width="0dp"
      android:text="%"
      android:background="#F8BBD0"
      android:textSize="40dp"
      android:textColor="#ffff"
      android:id="@+id/btn_perc"
      android:layout_height="match_parent"
      android:layout_weight="1"></Button>
  <Button
      android:layout_width="0dp"
      android:text="/"
      android:background="#F8BBD0"
      android:textSize="40dp"
      android:id="@+id/btn_div"
      android:textColor="#ffff"
      android:layout_height="match_parent"
      android:layout_weight="1"></Button>


 </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="4">
   <Button
       android:layout_width="0dp"
       android:text="7"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_7"
       android:layout_height="match_parent"
       android:layout_weight="1"> </Button>
   <Button
       android:layout_width="0dp"
       android:text="8"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_8"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="9"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_9"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="x"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_x"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>



  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="4">
   <Button
       android:layout_width="0dp"
       android:text="4"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_4"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="5"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_5"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="6"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_6"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="-"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_min"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>



  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="4">
   <Button
       android:layout_width="0dp"
       android:text="1"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_1"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="2"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_2"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="3"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_3"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="+"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_plus"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>


  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="4">
   <Button
       android:layout_width="0dp"
       android:text="0"
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_0"
       android:layout_height="match_parent"
       android:layout_weight="2"></Button>

   <Button
       android:layout_width="0dp"
       android:text="."
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_point"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>
   <Button
       android:layout_width="0dp"
       android:text="="
       android:background="#F8BBD0"
       android:textSize="40dp"
       android:textColor="#ffff"
       android:id="@+id/btn_eq"
       android:layout_height="match_parent"
       android:layout_weight="1"></Button>



  </LinearLayout>
 </LinearLayout>
</LinearLayout>





